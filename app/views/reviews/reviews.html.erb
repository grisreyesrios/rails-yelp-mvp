<h1><%= @restaurant.name %></h1>
<% if ['a','e','i','o','u'].include? @restaurant.category[0] %>
  <p>An <%= @restaurant.category.capitalize %> restaurant</p>
<% else %>
  <p>A <%= @restaurant.category.capitalize %> restaurant</p>
<% end %>

<br>

<h3>Review <%= @restaurant.name %></h3>
<%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, prompt: "Select a rating", collection: [0,1,2,3,4,5] %>
    <%= f.submit %>
<% end %>

<h3>Reviews</h3>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      Rating: <%= "*" * review.rating %>
      <p><%= review.content %></p>
    </li>
  <% end %>
</ul>
